<% if @current_page.has_challenge?  %>
  <%= link_to challenge_path(@current_page.challenge) do  %>
    <div class="next-flip">Replace with next shape</div>
  <% end %>
<% else %>
  <%= link_to page_path(@next_page), method: :patch do  %>
    <div class="next-flip">Replace with next shape</div>
  <% end %>
<% end %>

